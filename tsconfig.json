{
  "include": ["src/**/*.ts", "data/**/*.ts"],
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es2016",
    "module": "commonjs",
    "types": ["node"],
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
